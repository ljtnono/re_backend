    <!-- 根据角色id列表获取角色的权限列表 -->
    <select id="findPermissionListByRoleIdListAndProjectName" resultType="cn.lingjiatong.re.common.entity.Permission">
        SELECT
            p.id,
            p.name,
            p.type,
            p.expression,
            p.menu_id
        FROM re_sys.permission p
        <where>
            p.id IN (
                SELECT
                    permission_id
                FROM re_sys.tr_role_permission trp
                <where>
                    trp.role_id IN
                    <foreach collection="roleIdList" item="roleId" open="(" close=")" separator=",">
                        #{roleId, jdbcType=BIGINT}
                    </foreach>
                </where>
            )
            AND p.is_deleted = ${@cn.lingjiatong.re.common.constant.CommonConstant@ENTITY_NORMAL}
            AND p.project_name = #{projectName, jdbcType=VARCHAR}
        </where>
    </select>
</mapper>
